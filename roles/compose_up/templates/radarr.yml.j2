---
services:
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - /home/ansible/radarr/config:/config
      - /home/bleroux/Videos/movies:/movies
      - /home/bleroux/downloads:/downloads
    ports:
      - 7878:7878
    restart: unless-stopped
